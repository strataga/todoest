{
  "name": "todo-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" \"!**/node_modules/**\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" \"!**/node_modules/**\"",
    "dev:api": "turbo run dev --filter=@todo/api",
    "dev:web": "turbo run dev --filter=@todo/web",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0"
}
